<!--pages/login/login.wxml-->
<view class="container">
  <view class="login_title">
    <view class="h1">超人修</view>
    <view class="h2">致力于成为杭城口碑相传的知名手机快修平台</view>
  </view>
  <view class="login_form">
    <view class="input_box">
      <input placeholder="请输入手机号" bindinput ="phoneInput"></input>
    </view>
    <!-- <view class="input_box">
      <input placeholder="短信验证码"></input>
      <button class="getCode_btn">获取验证码</button>
    </view> -->
    <view class="input_box">
      <input placeholder="请输入登录密码" bindinput ="pwdInput"></input>
    </view>
    <view class="warn">{{errMsg}}</view>
    <button class="btn_red login_btn" bindtap="loginAction">登录</button>
  </view>
</view>
