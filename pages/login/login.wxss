/* pages/login/login.wxss */
.login_title{
  width: 610rpx;
  margin:80rpx 0 100rpx 0;
}
.login_title .h1{
  font-size: 38rpx;
  color: #e7534c;
  font-weight: 600;
  line-height: 60rpx;
}
.login_title .h2{
  font-size: 30rpx;
  color: #636363;
  font-weight: 500;
  line-height: 50rpx;
}
.login_form{
  width: 610rpx;
}
.input_box{
  display: flex;
}
.input_box input{
  flex:1;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}
button.getCode_btn{
  margin-left:20rpx;
  color: #ec5c54;
  background: #f2f2f2;
  height: 80rpx;
  line-height: 80rpx;
}
button.login_btn{
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
}
.login_form .warn{
  height: 50rpx;
  line-height: 50rpx;
  color: #ec5c54;
}
