/* pages/maintain/beforeOpen/beforeOpen.wxss */
.photo_box{
  margin: 20rpx 0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.photo_box >view{
  width:400rpx;
  height: 300rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin-bottom:20rpx;
  color: #808080;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.photo_box >view .fa{
  font-size: 50rpx;
  color: #BBB8B8;
}
.photo_box .imgBox{
  width: 100%;
  height: 100%;
  text-align: center;
  position: relative;
}
.photo_box .imgBox image{
  max-width: 100%;
  max-height: 100%;
  vertical-align: middle;
}
.photo_box .imgBox .fa{
  color: #e7534c;
  font-size: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
button{
  width: 340rpx;
}
.refuse_reason{
  width: 680rpx;
  height: 240rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin:40rpx 0 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}